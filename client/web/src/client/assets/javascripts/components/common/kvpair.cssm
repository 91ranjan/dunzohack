.KVPair {
    display: inline-flex;
    width: 100%;
    align-items: baseline;
    justify-content: space-around;

    input {
        width: auto;
    }
    >span {
        cursor: pointer;
        width: 20px;
        height: 20px;
        background-color: #ddd;
        border-radius: 100%;
        text-align: center;
        font-size: 12px;
        line-height: 20px;
    }
}